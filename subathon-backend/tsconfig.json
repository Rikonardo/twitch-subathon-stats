{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*"
        ]
    },
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "include": [
      "src/**/*"
  ]
}
